/* pages/card/card.wxss */
page{
    width: 100%;
    height: 100%;
}
.card{
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}
.bg{
    width: 750rpx;
    height: 1334rpx;
}
.logo{
    position: absolute;
    top: 80rpx;
    left: 30rpx;
    width: 130rpx;
    height: 130rpx;
    background: rgba(255,255,255,0.8);
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.logo image{
    width: 95rpx;
    height: 53rpx;
}
.tabNav{
    padding-left: 30rpx;
    width:45%;
    position: absolute;
    top: 80rpx;
    right: 0;
    display: flex;
    justify-content: space-between;
    background: rgba(102,131,235,0.9);
    border-top-left-radius:100rpx; 
    border-bottom-left-radius:100rpx; 
}
.tabNav view{
    flex-grow: 1;
    text-align: center;
    padding: 15rpx 0 10rpx;
}
.tabNav view text{
    line-height: 50rpx;
    color: #fff;
}
.tabNav view image{
    width: 35rpx;
    display: block;
    margin: 0 auto;
}