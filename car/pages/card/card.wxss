/* pages/card/card.wxss */

page {
    width: 100%;
    height: 100%;
}

.card {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

.bg {
    width: 750rpx;
    height: 1334rpx;
}

.logo {
    position: absolute;
    top: 80rpx;
    left: 30rpx;
    width: 130rpx;
    height: 130rpx;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.logo image {
    width: 95rpx;
    height: 53rpx;
}

.tabNav {
    padding-left: 30rpx;
    width: 45%;
    position: absolute;
    top: 80rpx;
    right: 0;
    display: flex;
    justify-content: space-between;
    background: rgba(102, 131, 235, 0.9);
    border-top-left-radius: 100rpx;
    border-bottom-left-radius: 100rpx;
}

.tabNav view {
    flex-grow: 1;
    text-align: center;
    padding: 15rpx 0 10rpx;
}

.tabNav view text {
    line-height: 50rpx;
    color: #fff;
}

.tabNav view image {
    width: 35rpx;
    display: block;
    margin: 0 auto;
}

.infoBox {
    position: absolute;
    width: 90%;
    left: 5%;
    top: 550rpx;
    background: rgba(255, 255, 255, 0.9);
    min-height: 100rpx;
    border-radius: 20rpx;
}

.infoBox .rz_icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 165rpx;
    height: 165rpx;
}

.infoBox .info {
    padding: 30rpx;
    display: flex;
    /* justify-content: space-between; */
    align-items: center;
}

.infoBox .info .photo {
    flex-basis: 130rpx;
    border-radius: 100%;
}

.infoBox .photo image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.infoBox .info .title {
    display: flex;
    font-size: 24rpx;
}

.infoBox .info .txt {
    font-size: 20rpx;
}

.infoBox .info .title image {
    width: 26rpx;
    height: 26rpx;
    padding-left: 10rpx;
}

.address {
    padding-top: 50rpx;
    padding: 30rpx 20rpx 50rpx;
}

.address .item {
    padding: 5rpx 0;
}

.btnBox {
    position: absolute;
    width: 100%;
    height: 110rpx;
    display: flex;
    justify-content: space-around;
    top: 1000rpx;
    align-items: center;
}

.btnBox view {
    text-align: center;
    flex-basis: 110rpx;
    background: #8fa5ee;
    border-radius: 100%;
    height: 110rpx;
    align-self: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btnBox view image {
    height: 60rpx;
}

.btnBox2 {
    position: absolute;
    display: flex;
    justify-content: space-between;
    top: 900rpx;
    width: 80%;
    left: 10%;
}

.btnBox2 view {
    flex-basis: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: rgba(94, 132, 242, 0.6);
    border-radius: 10rpx;
    color: #fff;
}

