<view class="chat">
    <view class='blank'></view>
    <view class='radiusTop'></view>
    <view class='panel'>
        <view class='list-item' bindtap='goCard'>
            <view class='flexL'>
                <image style='width:100rpx;height:100rpx;' mode="aspectFill" src="{{info.headpic}}"></image>
            </view>
            <view class='flexC'>
                <view class='title'>{{info.name}}</view>
                <view class='num'>
                    <text>{{info.popularity}}</text>
                    人找他咨询
                </view>
                <view class='starBox'>
                    <view class='star'>
                        <image src='{{info.logo}}' style='width:50rpx;height:30rpx;' mode="aspectFit" class='star'></image>
                    </view>
                    <text class='shengl'>{{info.company}}</text>
                </view>
            </view>
            <view class='flexR'>
                <text>推荐TA</text>
            </view>
        </view>
        <view class='flexBox'>
            <view class='flexWrap' bindtap='makePhoneHandle' data-phone="{{mobile}}">
                <view class='flexL' >电话：{{info.mobile}}</view>
                <view class='flexR'><image src="/assets/images/phone.png"></image></view>
            </view>
            <view class='flexWrap comment' bindtap='commentHandle'>
                <view class='flexL'>评价：
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
