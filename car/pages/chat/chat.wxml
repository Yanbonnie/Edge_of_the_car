                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <text class='fontRed margin-left10'>{{item.evaluate}}</text>
                </view>
                <view class='flexR'><image style='width:17rpx;' src="/assets/images/right_icon.png"></image></view>
            </view>
        </view>
    </view>
