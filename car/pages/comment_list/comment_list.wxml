<!--pages/comment/comment.wxml-->
<view class="chat comment">
    <view class='blank'></view>
    <view class='radiusTop'></view>
    <view class='panel'>
        <view class='list-item'>
            <view class='flexL'  bindtap='goCard'>
                <image style='width:100rpx;height:100rpx;' mode="aspectFill" src="{{info.picture}}"></image>
            </view>
            <view class='flexC'  bindtap='goCard'>
                <view class='title'>{{info.name}}</view>
                <view class='num'>
                    <text>{{info.like}}</text>
                    人找他咨询
                </view>
                <view class='starBox'>
                    <view class='star'>
                        <image src='{{info.logo}}' style='width:50rpx;height:30rpx;' mode="aspectFit" class='star'></image>
                    </view>
                    <text class='shengl'>{{info.address}}</text>
                </view>
            </view>
            <view class='flexR' bindtap='makePhoneHandle' data-phone="18825039689">
                <image src='/assets/images/phone.png'></image>
            </view>
        </view>
        <view class='flexBox'>
            <view class='flexWrap comment'>
                <view class='flexL'>评价：
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <image src='/assets/images/start_on.png'></image>
                    <text class='fontRed margin-left10'>4.8</text>
                </view>
            </view>
        </view>
    </view>
    <view class='chat_view'>
        <view class='chitchat'>
            <scroll-view class='chatList' scroll-y="true" style='height:100%;'>
                <view class='labelBox'>
                    <view><text>服务热情176</text></view>
                    <view><text>有责任心142</text></view>
                    <view><text>非常专业185</text></view>
                </view>
                <view class='labelBox'>
                    <view><text>回复及时452</text></view>
                    <view><text>态度诚恳988</text></view>
                    <view><text>有亲和力142</text></view>
                </view>
                <view class='comment_list'>
                    <view class='comment-item' wx:for="{{commentList}}" wx:key="index" wx:for-item="commentItem">
                        <view class='flexL'>
                            <text>{{commentItem.userName}}</text>
                            <view>
                                <view><image wx:for="{{commentItem.start}}" wx:key="{{index}}" src="/assets/images/start_on.png"></image></view>
                                <view style="padding-left:10rpx;">{{commentItem.comment}}</view>
                            </view>
                        </view>
                        <view class='flexR'>
                            {{commentItem.time}}
                        </view>
                    </view>
                </view>
            </scroll-view>   
        </view>
    </view>
    <view class='info_box'>
        <view class='send_comment' bindtap='sendComment'>
            <view>发表评价</view>
        </view>
    </view>
</view>

